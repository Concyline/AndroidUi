<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <solid android:color="#FFFFFF" />

                    <stroke
                        android:width="1dp"
                        android:color="#CCC" />

                    <padding
                        android:bottom="@dimen/paddingBotton"
                        android:left="@dimen/paddingLeft"
                        android:right="@dimen/paddingRight"
                        android:top="@dimen/paddingTop" />

                    <corners
                        android:bottomLeftRadius="@dimen/corners"
                        android:bottomRightRadius="@dimen/corners"
                        android:topLeftRadius="@dimen/corners"
                        android:topRightRadius="@dimen/corners" />

                </shape>
            </item>

            <item android:right="10dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/round_keyboard_arrow_down_black_48dp" android:tint="#CCC" />

            </item>

        </layer-list>

    </item>

</selector>